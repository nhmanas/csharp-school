                    <TextBox x:Name="midtermgradeBox" HorizontalAlignment="Left" Height="27" Margin="759.774,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Grid.Column="1"/>
                    <ComboBox x:Name="selectcourseCombo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="388" SelectedIndex="0" Grid.ColumnSpan="2" DropDownClosed="selectcourseCombo_changed">
