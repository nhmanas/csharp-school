                            <Label x:Name="tue2" Content="" HorizontalAlignment="Left" Margin="315,179,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="52" Width="146" Foreground="White"/>
                            <Label x:Name="wed2" Content="" HorizontalAlignment="Left" Margin="466,179,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="52" Width="146" Foreground="White"/>
